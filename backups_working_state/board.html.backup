<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="Cache-Control" content="no-store" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Caseboard • Live Board</title>
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="/static/brand.css">
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body class="page-tv dense board-mode">
  <header class="header header-tv slim">
    <img src="/static/pngs/Professional_Logo.png" alt="Professional Logo" class="header-logo">
    <div class="brand">David W. Wells • Live Case Board</div>
    <div class="live" aria-live="polite">
      <span class="live-indicator" id="liveIndicator">● LIVE</span>
      <span class="dot" aria-hidden="true"></span>
      <span id="date" class="date"></span>
      <span class="dot" aria-hidden="true"></span>
      <span id="clock"></span>
    </div>
  </header>

  <main class="wrap manage-layout tv-layout">
    <div class="board-grid tv-board-grid board-expanded">
      <!-- Main case list panel - expanded to fill space -->
      <section class="card list-card board-card tv-list" aria-label="Active cases">
        <header class="card-header">
          <div>
            <h2>Active cases</h2>
            <p class="small muted">Auto-refreshes every minute</p>
            <div class="page-progress" aria-hidden="true"><div id="pageProgress" class="page-progress-bar"></div></div>
          </div>
          <div class="count" id="metricTotalLabel">0 cases</div>
        </header>

        <div class="table">
          <div class="thead">
            <div class="cell col-client">Client</div>
            <div class="cell col-case-name">Case</div>
            <div class="cell col-type">Type</div>
            <div class="cell col-status">Status</div>
            <div class="cell col-focus">Focus</div>
            <div class="cell col-county">County</div>
          </div>
          <div class="list-body tv-scroll" id="caseScroller">
            <div id="rows"></div>
          </div>
        </div>

        <div class="scroll-veil top"></div>
        <div class="scroll-veil bottom"></div>
      </section>
    </div>
  </main>

  <div class="tv-vignette" aria-hidden="true"></div>

  <script src="/static/board.js" defer></script>
</body>
</html>